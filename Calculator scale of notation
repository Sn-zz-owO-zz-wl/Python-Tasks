#Перевод из двоичной в десятичную
def bin_to_dec():
    num = input('Введите число: ')
    count = 1
    total = 0
    for _ in range(len(num)):
        x = len(num) - count
        count += 1
        total += int(num[_]) * 2**x
    return print(total)
        
#Перевод из восьмиричной в десятичную
def oct_to_dec():
    pass
#Перевод из шестнадцатиричной в десятичную
def hex_to_dec():
    num = input('Введите число: ')
    count = 1
    total = 0
    for _ in range(len(num)):
        x = len(num) - count
        count += 1
        if num[_].isdigit == False:
            total += (ord(num[_])-55) * 16**x
        else: 
            total += int(num[_]) * 16**x
    return print(total)
    
#Функция выбора системы счисления из которой перевести
def choice():
    ans = input('Выберите систему счисления из которой требуется перевести число: \n1 - Двоичная\n2 - Восьмиричная\n3 - Шестнадцатиричная\n')
    if int(ans) == 1:
        bin_to_dec()
    elif int(ans) == 2:
        oct_to_dec()
    elif int(ans) == 3:
        hex_to_dec()

choice()

